                <TableColumn fx:id="columnEventsNume" prefWidth="107.199951171875" text="Nume" />
                  <TableColumn fx:id="columnEventsLocatie" prefWidth="103.20001220703125" text="Locatie" />
                  <TableColumn fx:id="columnEventsDescriere" prefWidth="135.20001220703125" text="Descriere" />
                  <TableColumn fx:id="columnEventsData" prefWidth="138.39996337890625" text="Data" />
              </columns>
            </TableView>
            <Button mnemonicParsing="false" text="Participa" onAction="#onClickParticipa" styleClass="purple-button" stylesheets="@../css/button.css"/>
            <Button mnemonicParsing="false" text="Back" onAction="#onClickGoBack" styleClass="purple-button" stylesheets="@../css/button.css"/>
         </children>
      </VBox>
   </children>
