<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laborator6map.controller.ControllerLogin" styleClass="beige-background" stylesheets="@../css/background.css">
   <VBox alignment="CENTER" layoutX="180.0" layoutY="80.0" prefHeight="189.0" prefWidth="239.0" spacing="10.0">
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Username" />
            <TextField fx:id="textFieldLoginIn" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Password" />
            <PasswordField fx:id="passwordFieldLogin" />
         </children>
      </HBox>
      <Button fx:id="buttonLoginIn" mnemonicParsing="false" onAction="#onClickLogIn" text="Log in" styleClass="purple-button" stylesheets="@../css/button.css"/>
      <Label text="Don't have an account? Sign up" />
      <Button fx:id="buttonSignUp" mnemonicParsing="false" text="Sign up" onAction="#onClickGoToSignUp" styleClass="purple-button" stylesheets="@../css/button.css"/>
   </VBox>
</AnchorPane>
