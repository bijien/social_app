<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ControllerCreateEvent" styleClass="beige-background" stylesheets="@../css/background.css">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="602.0" spacing="18.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="60.0" text="Nume" />
                  <TextField prefHeight="26.0" prefWidth="180.0" fx:id="textFieldNume"/>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="60.0" text="Locatie" />
                  <TextField prefHeight="26.0" prefWidth="180.0" fx:id="textFieldLocatie"/>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="60.0" text="Descriere" />
                  <TextField prefHeight="26.0" prefWidth="180.0" fx:id="textFieldDescriere"/>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="60.0" text="Data" />
                  <DatePicker prefHeight="26.0" prefWidth="180.0" fx:id="datePickerData"/>
                  <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="49.0" text="Ora" />
                  <TextField prefHeight="26.0" prefWidth="80.0" fx:id="textFieldOra"/>
                  <Label text="Minute" />
                  <TextField prefHeight="26.0" prefWidth="80.0" fx:id="textFieldMinute"/>
               </children>
            </HBox>
            <Button mnemonicParsing="false" text="Creeaza eveniment" onAction="#onClickCreeazaEveniment" styleClass="purple-button" stylesheets="@../css/button.css"/>
            <Button mnemonicParsing="false" text="Back" onAction="#onclickGoBack" styleClass="purple-button" stylesheets="@../css/button.css"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
